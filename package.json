{
  "name": "monorepo",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build:a": "ng build app1",
    "build:b": "ng build app2",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "dev:ssr:a": "ng run app1:serve-ssr",
    "serve:ssr:a": "node dist/app1/server/main.js",
    "build:ssr:a": "ng build && ng run app1:server",
    "prerender:a": "ng run app1:prerender",
    "dev:ssr:b": "ng run app2:serve-ssr",
    "serve:ssr:b": "node dist/app2/server/main.js",
    "build:ssr:b": "ng build && ng run app2:server",
    "prerender:b": "ng run app2:prerender"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^14.0.0",
    "@angular/common": "^14.0.0",
    "@angular/compiler": "^14.0.0",
    "@angular/core": "^14.0.0",
    "@angular/forms": "^14.0.0",
    "@angular/platform-browser": "^14.0.0",
    "@angular/platform-browser-dynamic": "^14.0.0",
    "@angular/platform-server": "^14.0.0",
    "@angular/router": "^14.0.0",
    "@nguniversal/express-engine": "^14.0.0",
    "express": "^4.15.2",
    "rxjs": "~7.5.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^14.0.0",
    "@angular/cli": "~14.0.0",
    "@angular/compiler-cli": "^14.0.0",
    "@nguniversal/builders": "^14.0.0",
    "@types/express": "^4.17.0",
    "@types/jasmine": "~4.0.0",
    "@types/node": "^14.15.0",
    "jasmine-core": "~4.1.0",
    "karma": "~6.3.0",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.0.0",
    "karma-jasmine-html-reporter": "~1.7.0",
    "typescript": "~4.7.2"
  }
}
